{
  "metadata": {
    "project_name": "To Vote or Not To Vote",
    "version": "1.0",
    "description": "Configuration file for generating agent populations and setting environmental context for election simulations.",
    "authors": [
      "Prakhar Singhal",
      "Sativika Miryala"
    ],
    "last_updated": "2025-11-02"
  },
  "feature_definitions": {
    "_comment": "Glossary of all possible features. Defines the 'what'.",
    "demographics": {
      "education_normalized": {
        "description": "Years of education scaled 0-1.",
        "type": "continuous",
        "scope": "agent"
      },
      "age": {
        "description": "Age in years.",
        "type": "integer",
        "scope": "agent"
      },
      "urbanicity": {
        "description": "Whether the agent lives in an urban or rural setting.",
        "type": "binary",
        "scope": "agent"
      }
    },
    "psychological": {
      "civic_duty": {
        "description": "Internalized sense of obligation to vote (0-1).",
        "type": "continuous",
        "scope": "agent"
      },
      "habit_strength": {
        "description": "Strength of voting habit based on past behavior (0-1).",
        "type": "continuous",
        "scope": "agent"
      },
      "social_pressure_sensitivity": {
        "description": "Susceptibility to social norms (0-1).",
        "type": "continuous",
        "scope": "agent"
      },
      "risk_aversion": {
        "description": "Preference for certainty over uncertainty (0-1).",
        "type": "continuous",
        "scope": "agent"
      },
      "partisan_identity_strength": {
        "description": "Strength of attachment to a political party (0-1).",
        "type": "continuous",
        "scope": "agent"
      },
      "overconfidence": {
        "description": "Overestimation of one's own political knowledge (0-1).",
        "type": "continuous",
        "scope": "agent"
      }
    },
    "contextual": {
      "electoral_competitiveness": {
        "description": "Perceived closeness of the election (0-1).",
        "type": "continuous",
        "scope": "global"
      },
      "voting_cost_total": {
        "description": "Overall perceived cost to vote (0-1).",
        "type": "continuous",
        "scope": "global"
      },
      "campaign_duration": {
        "description": "Length of the election campaign in days.",
        "type": "integer",
        "scope": "global"
      }
    }
  },
  "proxy_logic": {
    "_comment": "Rules for mapping real-world data to features. Defines the 'how'.",
    "civic_duty": {
      "proxy_variable": "District Literacy Rate",
      "data_source": "NDAP / Census",
      "rationale": "Strong correlation between education and civic engagement.",
      "implementation_rule": "Use literacy rate as probability to assign agents to high/low groups, then draw from a skewed Beta distribution."
    },
    "habit_strength": {
      "proxy_variable": "Historical Average Turnout",
      "data_source": "Lok Dhaba / CSEP",
      "rationale": "Constituencies with high turnout are composed of habitual voters.",
      "implementation_rule": "Use historical turnout as the probability 'p' in a Binomial draw to assign 'n_past_votes', then normalize to get habit strength."
    },
    "electoral_competitiveness": {
      "proxy_variable": "Margin of Victory in Previous Election (2014)",
      "data_source": "Lok Dhaba / CSEP",
      "rationale": "Recent close races are the strongest predictor of perceived competitiveness.",
      "implementation_rule": "Inversely scale the margin percentage to a 0-1 score. Small margin -> high score."
    },
    "voting_cost_total": {
      "proxy_variable": "Urbanicity & Population Density",
      "data_source": "NDAP / Census",
      "rationale": "Rural areas imply higher travel costs; dense urban areas have better infrastructure.",
      "implementation_rule": "Classify constituency as high/medium/low cost based on a density threshold."
    }
  },
  "simulation_scenarios": [
    {
      "scenario_name": "Thiruvananthapuram, Kerala (2019)",
      "constituency_code": "TVM",
      "validation_target": {
        "metric": "Voter Turnout",
        "value": 0.7345,
        "source": "Lok Dhaba, 2019 General Election Results"
      },
      "agent_generation_rules": {
        "population_size": 10000,
        "education_normalized": {
          "method": "probabilistic_distribution",
          "parameters": {
            "literacy_rate": 0.94
          }
        },
        "urbanicity": {
          "method": "probabilistic_assignment",
          "parameters": {
            "probability_urban": 0.67
          }
        },
        "civic_duty": {
          "method": "beta_distribution_from_proxy",
          "parameters": {
            "proxy_value": 0.94,
            "high_skew_params": [
              5,
              2
            ],
            "low_skew_params": [
              2,
              5
            ]
          }
        },
        "habit_strength": {
          "method": "binomial_draw_normalized",
          "parameters": {
            "num_elections": 5,
            "probability": 0.75
          }
        },
        "social_pressure_sensitivity": {
          "method": "beta_distribution",
          "parameters": [
            2,
            2
          ]
        },
        "risk_aversion": {
          "method": "beta_distribution",
          "parameters": [
            2,
            3
          ]
        },
        "partisan_identity_strength": {
          "method": "beta_distribution",
          "parameters": [
            5,
            2
          ]
        },
        "overconfidence": {
          "method": "beta_distribution",
          "parameters": [
            3,
            3
          ]
        }
      },
      "global_context": {
        "electoral_competitiveness": 0.95,
        "voting_cost_total": 0.2,
        "campaign_duration": 60
      }
    },
    {
      "scenario_name": "Shravasti, Uttar Pradesh (2019)",
      "constituency_code": "SHR",
      "validation_target": {
        "metric": "Voter Turnout",
        "value": 0.5253,
        "source": "Lok Dhaba, 2019 General Election Results"
      },
      "agent_generation_rules": {
        "population_size": 10000,
        "education_normalized": {
          "method": "probabilistic_distribution",
          "parameters": {
            "literacy_rate": 0.47
          }
        },
        "urbanicity": {
          "method": "probabilistic_assignment",
          "parameters": {
            "probability_urban": 0.08
          }
        },
        "civic_duty": {
          "method": "beta_distribution_from_proxy",
          "parameters": {
            "proxy_value": 0.47,
            "high_skew_params": [
              5,
              2
            ],
            "low_skew_params": [
              2,
              5
            ]
          }
        },
        "habit_strength": {
          "method": "binomial_draw_normalized",
          "parameters": {
            "num_elections": 5,
            "probability": 0.55
          }
        },
        "social_pressure_sensitivity": {
          "method": "beta_distribution",
          "parameters": [
            3,
            2
          ]
        },
        "risk_aversion": {
          "method": "beta_distribution",
          "parameters": [
            4,
            2
          ]
        },
        "partisan_identity_strength": {
          "method": "beta_distribution",
          "parameters": [
            3,
            3
          ]
        },
        "overconfidence": {
          "method": "beta_distribution",
          "parameters": [
            4,
            3
          ]
        }
      },
      "global_context": {
        "electoral_competitiveness": 0.6,
        "voting_cost_total": 0.8,
        "campaign_duration": 60
