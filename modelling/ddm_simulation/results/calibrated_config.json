    },
    "drift_diffusion_model": {
      "drift_rate_base": 0.028685033990384856,
      "threshold_base": 0.5369722230270522,
      "drift_components": {
        "beta_D": 0.11287779708317702,
        "beta_H": 0.16325964081278077,
        "beta_S": 0.03314240018374756,
        "beta_C": -0.19421817332045016
      }
    },
    "dual_system_model": {
      "system1_weights": {
        "habit": 2.0,
        "social_pressure": 1.5
      },
      "system2_weights": {
        "civic_duty": 1.8,
